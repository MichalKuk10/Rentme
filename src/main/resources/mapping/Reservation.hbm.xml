<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
    <class name="com.codecool.model.Reservation" table="reservations">

        <meta attribute="class-description">
            This class contains the reservations details.
        </meta>

        <id name="id" type="long" column="id">
            <generator class="native"/>
        </id>

        <property name="itemId" column="item_id" type="long"/>
        <property name="appUserId" column="renter_id" type="string"/>
        <property name="rentingStartDate" column="renting_start_date" type="date"/>
        <property name="rentingEndDate" column="renting_end_date" type="date"/>
    </class>
</hibernate-mapping>